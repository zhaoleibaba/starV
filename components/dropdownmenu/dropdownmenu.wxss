/* components/dropdownmenu/dropdownmenu.wxss */
.nav-item{
  display: flex;
  background: #fff;
  border-bottom: 1px solid #f2f2f2;
}
.nav-item .item-title{
  font-size:28rpx;
  display: inline-block;
  width: 50%;
  text-align: center;
  height: 96rpx;
  line-height: 96rpx;
  color: #4a4a4a;
  font-weight: 400;
}
.nav-item .item-title::after{
  display: inline-block;
  content: "";
  height: 24rpx;
  width: 24rpx;
  padding-left: 15rpx;
  background: url(data:image/png;base64,);
  background-size: contain;
  background-position: 50%;
  background-repeat: no-repeat;
  vertical-align: middle;
  -webkit-transition: all .3s;
  transition: all .3s;
}
.nav-item .item-title.col_90{
  color: #F75141;
}
.active{
  color: #F75141;
}
.nav-item .active.item-title::after {
  transform: rotate(180deg);
}
.districtBox, .conditionBox {
  position: fixed;
  display: none;
  z-index: 5;
  width: 100%;
  height: 100%;
  /* overflow-y: scroll; */
}
.districtBox .df{
  display: flex;
}
.districtBox.show, .conditionBox.show{
  display: block;
}
.districtBox .half {
  overflow-y: scroll;
  float: left;
  height: 464rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  z-index: 9999;
  border: none !important;
}
.districtBox .half-left{
  /* flex: 1; */
  background-color: #fafafa;
  width: 196rpx;
  text-align: center;
  color: #2C2C2C;
  font-weight: bold;
}
.districtBox .half-right{
  flex: 2;
  background-color: #fff;
  padding-left: 10rpx;
}
.half view {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding-left: 15rpx;
}

.half-right view {
  display: inline-block;
  padding-right: 30rpx;
  color: #4a4a4a;
  line-height: 30rpx;
  /* border-bottom: 1px solid #f7f7f7; */
}
.current_left_select {
  background-color: #fff;
  color: #4a4a4a;
  /* font-weight: 400; */
}

.half-right view.current_right_select {
  background-color: #fff;
  color: #fc6060;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.dropdownBox{
  padding: 40rpx 56rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #4a4a4a;
  background-color: #fff;
  height: 872rpx;
  position: relative;
}
.dropdownBox .list{
  margin-bottom: 50rpx;
}
.districtBox .mask, .conditionBox .mask{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  
}
.dropdownBox .ceshi{
  position: relative;
  height: 100%;
  overflow-y: scroll;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}
.dropdownBtn{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  background: #fff;
  border-top: 1px solid #f2f2f2;
  display: flex;
  justify-content: space-between;
}
.dropdownBtn .btn.reset{
  background: #F8F8F8;
  color: #4a4a4a;
}
.dropdownBtn .btn.confirm{
  background: var(--c);
  color: #fff;
}
.dropdownBtn button{
  width: 300rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  margin: 0;
}

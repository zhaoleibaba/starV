/* pages/user/user.wxss */
page{
  background: #f2f2f2;
}
.top{
  width: 100%;
  height: 308rpx;
  position: relative;
  background: linear-gradient(#7D3F96, #4F2162);
  overflow: hidden;
}
.lgbtn{
  width: 200rpx;
  height: 100rpx;
  line-height: 50rpx;
  background: none;
  color: #fff;
  font-weight: 600;
  margin: 0 auto;
  margin-top: 20rpx;
  z-index: 999;
}
.lgbtn::after{
  border: none;
}
.top-head{
  width: 100%;
  margin-top: 50rpx;
}
.top-head image{
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
  display: block;
}
.top-head text{
  width: 100%;
  text-align: center;
  padding: 20rpx 0 0 0;
  display: block;
  font-size: 32rpx;
  color: #fff;
}
.showBanner{
  width: 100%;
  height: 140rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
}
.main{
  width: 100%;
}
.main-item{
  background: #fff;
  height: 100rpx;
  color: #4a4a4a;
  font-size: 28rpx;
  margin-bottom: 1px;
}
.main-item .icon{
  width: 50rpx;
  height: 50rpx;
  display: block;
  float: left;
  margin: 25rpx 36rpx 0 30rpx;
}
.main-item .title{
  display: inline-block;
  line-height: 100rpx;
}
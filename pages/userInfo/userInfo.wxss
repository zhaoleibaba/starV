/* pages/userInfo/userInfo.wxss */
.form{
  padding: 0 40rpx 40rpx 40rpx;
  width: 100%;
  display: block;
  box-sizing: border-box;
}
.form-info{
  width: 100%;
  height: 100%;
  background: #fff;
  border-radius: 10rpx;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
}
.form-info .item-box{
  border: 1px solid #DCDFE6;
  height: 80rpx;
  margin-bottom: 18rpx;
  border-radius: 10rpx;
  position: relative;
  display: inline-block;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.item-box .icon{
  width: 48rpx;
  height: 48rpx;
  display: block;
  margin-left: 24rpx;
  margin-top: 15rpx;
  float: left;
}

.item-box .value{
  height: 100%;
  font-size: 28rpx;
  color: #000;
  display: inline-block;
  overflow: hidden;
  padding-left: 30rpx;
}
.item-box .value input{
  height: 100%;
}
.btn-box{
  width: 50%;
  margin: 0 auto;
  margin-top: 40rpx;
}
.item-box.item-date{
  margin-right: 4%;
}
.item-box.item-date,.item-box.item-long{
  width: 48%;
}

/* pages/reserve/reserve.wxss */
.container{
  font-size: 28rpx;
  color: #4a4a4a;
  z-index: 1;
}
.chooseData{
  position: relative;
}
.reserveInfo {
  line-height: 80rpx;
  width: 100%;
  border-top: 10rpx solid #7D3F96;
  padding: 30rpx;
  box-sizing: border-box;
}
.reserveInfo .title{
  font-size: 48rpx;
  color: #000;
  font-weight: bold;
}
.reserveInfo .pri{
  font-weight: 400;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
}
.reserveInfo .pri .col_tag{
  font-size: 44rpx;
  font-weight: bold;
}
.category, .order-info{
  width: 100%;
  padding: 30rpx 46rpx;
  box-sizing: border-box;
}
.category .ts{
  color: #6E6A6A;
  line-height: 50rpx;
  padding-bottom: 20rpx;
}
.category .van-dropdown-menu{
  border: 1px solid #f2f2f2;
  border-radius: 10rpx;
}
.category .van-dropdown-menu__title{
  width: 100%;
  padding: 20rpx;
  font-size: 32rpx;
}
.category .van-dropdown-menu__title::after{
  right: 0;
}
.order-info{
  line-height: 60rpx;
}
.order-info .title{
  font-size: 32rpx;
  font-weight: bold;
}
.order-info .data-box .data{
  border: 1px solid #DCDFE6;
  height: 80rpx;
  border-radius: 10rpx;
  position: relative;
  display: inline-block;
  width: 550rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.order-info .data-box .fl{
  display: block;
  float: left;
  line-height: 80rpx;
  width: 140rpx;
}
.order-info .name{
  padding-bottom: 20rpx;
}
.order-info .data-box .data .icon {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: 50%;
  margin-top: -34rpx;
  left: 20rpx;
}
.order-info .data-box .data .value{
  width: 100%;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #000;
  display: inline-block;
  overflow: hidden;
  padding-left: 80rpx;
  box-sizing: border-box;
}
.order-info .data-box .data .input input{
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  padding-left: 20rpx;
}
.btn-area{
  position: fixed;
  width: 100%;
  right: 0;
  left: 0;
  bottom: 0;
  background: #fff;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  z-index: 2;
}
.section{
  width: 100%;
  height: 210rpx;
  margin-bottom: 80rpx;
  border: 1px solid #DCDFE6;
  border-radius: 10rpx;
  margin-top: 20rpx;
  padding: 10rpx;
  box-sizing: border-box;
}
textarea {
  width: 100%;
  height: 100%;
}
.btn-area .btn{
  background: var(--c);
  width: 100%;
  min-height: 80rpx;
  line-height: 80rpx;
  padding: 0;
}

.form-info{
  width: 100%;
  height: 100%;
  background: #fff;
  border-radius: 20rpx;
}

.form-info .item-box{
  border: 1px solid #DCDFE6;
  height: 80rpx;
  margin-bottom: 18rpx;
  border-radius: 10rpx;
  position: relative;
  display: block;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
.form-info .item-box::after{
  position: absolute;
  content: "";
  height: 24rpx;
  width: 24rpx;
  padding-left: 10rpx;
  background: url(data:image/png;base64,);
  background-size: contain;
  background-position: 50%;
  background-repeat: no-repeat;
  transition: all .3s;
  right: 20rpx;
  top: 30rpx;
}
.item-box .value{
  font-size: 28rpx;
  line-height: 80rpx;
  color: #000;
  display: inline-block;
  overflow: hidden;
  padding-left: 30rpx;
}
.timeBox {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.timeBox .td{
  border:1px solid #ddd;
  width: 100rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  margin-bottom: 10rpx;
}
.timeBox .td.on{
  background: #7D3F96;
  border: 1px solid #7D3F96;
  color: #fff;
}
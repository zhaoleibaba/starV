/* pages/assess/assess.wxss */
.rate {
  width: 100%;
  margin: 20rpx 0;
}
.rate .rt{
  display: block;
  float: left;
  line-height: 30px;
  font-size: 28rpx;
  padding-left: 40rpx;
  color: #4a4a4a;
  margin-right: 30rpx;
}
.order-info{
  line-height: 60rpx;
}
.btn-area{
  width: 320rpx;
  height: 80rpx;
  margin: 20rpx auto;
}
.section{
  width: 100%;
  height: 352rpx;
  margin-bottom: 30rpx;
  border: 1px solid #DCDFE6;
  border-radius: 10rpx;
  margin-top: 20rpx;
  padding: 10rpx;
  box-sizing: border-box;
}
textarea {
  width: 100%;
  height: 100%;
}
.btn-area .btn{
  background: var(--c);
  width: 100%;
  min-height: 80rpx;
  line-height: 80rpx;
  padding: 0;
}
.commit{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
/* pages/reset/reset.wxss */
.form{
  padding: 0 40rpx 40rpx 40rpx;
  width: 100%;
  display: block;
  box-sizing: border-box;
}
.form-info{
  width: 100%;
  height: 100%;
  background: #fff;
  border-radius: 10rpx;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
}
.form-info .item-box{
  border: 1px solid #DCDFE6;
  height: 80rpx;
  margin-bottom: 18rpx;
  border-radius: 10rpx;
  position: relative;
  display: inline-block;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.item-box .icon{
  width: 48rpx;
  height: 48rpx;
  display: block;
  margin-left: 24rpx;
  margin-top: 15rpx;
  float: left;
}

.item-box .value{
  height: 100%;
  font-size: 28rpx;
  color: #4a4a4a;
  display: inline-block;
  overflow: hidden;
  padding-left: 30rpx;
}
.item-box .value input{
  height: 100%;
}
.item-box .code{
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  background: #F4F4F4;
  line-height: 80rpx;
  padding: 0 10rpx;
  color: #4a4a4a;
  border-radius: 0;
  font-size: 28rpx;
  font-weight: normal;
  width: 200rpx;
  border-left: 1px solid #DCDFE6;
}
.btn-box{
  width: 50%;
  margin: 0 auto;
  margin-top: 40rpx;
}
.item-box.item-date{
  margin-right: 4%;
}
.item-box.item-date,.item-box.item-long{
  width: 48%;
}
button:after{
  border: none;
}
button[disabled] {
  color: rgba(0, 0, 0, 0.3) !important;
  background-color: #F7F7F7 !important;
}
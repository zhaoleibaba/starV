/* pages/discuss/discuss.wxss */
.container{
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: #f2f2f2;
}
.discuss-items{
  width: 100%;
  font-size: 28rpx;
  color: #4a4a4a;
}
.discuss-items .item{
  background: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  border-top: 10rpx solid #f2f2f2;
}
.discuss-items .item .top{
  margin-bottom: 30rpx;
}
.discuss-items .item .top .head{
  width: 110rpx;
  height: 110rpx;
  display: block;
  float: left;
  padding-right: 30rpx;
}
.discuss-items .item .top .right{
  line-height: 50rpx;
}
.discuss-items .item .top .right .tel{
  font-weight: bold;
}
.discuss-items .item .top .right text{
  margin-right: 60rpx;
}
.discuss-items .item .score .inline{
  top: 4rpx;
  padding-left: 10rpx;
  display: inline-block;
  position: relative;
  margin-left: -20rpx;
}
.discuss-items .item .score .rate,.discuss-items .item .score .em{
  display: block;
  width: 87px;
  height: 16px;
  overflow: hidden;
  background: url(data:image/png;base64,) -3px -18px no-repeat;
}
.em{
  position: absolute;
  top: 0;
  left: 0;
  background-position: 4rpx -2px !important;
  width: 100rpx;
}
.discuss-items .item .body{
  padding: 30rpx 0;
  display: block;
  line-height: 45rpx;
}
.discuss-items .item .reply{
  line-height: 45rpx;
  padding: 30rpx 0;
  border-top: 1px solid #f2f2f2;
}
.discuss-items .item .reply .fw{
  font-weight: bold;
}
.nofw{
  font-weight: normal;
  padding-left: 20rpx;
  display: inline;
}
.container .loadingComplete{
  text-align: center;
  line-height: 60rpx;
  color: #9b9b9b;
}